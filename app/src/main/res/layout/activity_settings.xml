<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/sets_page_margin"
    android:animateLayoutChanges="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/sets_til_wifi_ssid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sets_vert_spacing">

        <AutoCompleteTextView
            android:id="@+id/sets_actv_wifi_ssid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:inputType="text"
            android:completionThreshold="1"
            android:hint="@string/sets_wifi_ssid_hint" />

    </android.support.design.widget.TextInputLayout>

    <CheckBox
        android:id="@+id/sets_cb_bulb_static"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sets_vert_spacing"
        android:text="@string/sets_static_option" />

    <TextView
        android:id="@+id/sets_tv_bulb_dynamic_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sets_vert_spacing"
        android:text="@string/sets_info_dynamic" />


    <android.support.design.widget.TextInputLayout
        android:id="@+id/sets_til_bulb_address"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sets_vert_spacing">

        <AutoCompleteTextView
            android:id="@+id/sets_actv_bulb_address"
            android:inputType="number"
            android:digits="0123456789.:"
            android:completionThreshold="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/sets_bulb_address_hint" />

    </android.support.design.widget.TextInputLayout>

</LinearLayout>